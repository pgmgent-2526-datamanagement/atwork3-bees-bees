generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // For queries (pooled)
  directUrl = env("POSTGRES_URL_NON_POOLING") // For migrations (direct)
}

model User {
  id                  String               @id @default(cuid())
  name                String
  email               String               @unique
  hashedPassword      String
  role                Role                 @default(USER)
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  passwordResetTokens PasswordResetToken[]
  apiaries            Apiary[]
}

model Apiary {
  id        Int           @id @default(autoincrement())
  name      String
  latitude  Float         @default(0)
  longitude Float         @default(0)
  userId    String
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  hives     Hive[]
  plants    ApiaryPlant[]
}

model Hive {
  id           Int           @id @default(autoincrement())
  name         String
  type         String
  colonyType   String
  apiaryId     Int
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  apiary       Apiary        @relation(fields: [apiaryId], references: [id], onDelete: Cascade)
  observations Observation[]
}

model Observation {
  id               Int              @id @default(autoincrement())
  hiveId           Int
  hive             Hive             @relation(fields: [hiveId], references: [id], onDelete: Cascade)
  beeCount         Int
  pollenColor      String
  pollenAmount     PollenAmount     @default(GEMIDDELD)
  weatherCondition WeatherCondition @default(UNKNOWN)
  temperature      Float?
  notes            String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([userId, token])
}

model Plant {
  id             Int           @id @default(autoincrement())
  name           String
  latinName      String?
  type           String? // nectar, pollen, beide
  floweringStart Int? // standaard maand  
  floweringEnd   Int?
  apiaries       ApiaryPlant[]
}

model ApiaryPlant {
  id          String           @id @default(cuid())
  apiaryId    Int
  apiary      Apiary           @relation(fields: [apiaryId], references: [id], onDelete: Cascade)
  plantId     Int
  plant       Plant            @relation(fields: [plantId], references: [id], onDelete: Cascade)
  observedAt  DateTime         @default(now())
  notes       String? //bvb veel gele pollen gezien
  intensity   ForageIntensity? // hoe sterk de plant dracht levert 
  customStart Int? //als er een afwijkende bloeiperiode is
  customEnd   Int?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt
}

enum WeatherCondition {
  SUNNY
  PARTLY_CLOUDY
  CLOUDY
  RAINY
  UNKNOWN
}

enum PollenAmount {
  WEINIG
  GEMIDDELD
  VEEL
}

enum ForageIntensity {
  LOW
  MEDIUM
  HIGH
}

enum Role {
  USER
  ADMIN
  SUPERADMIN
}
